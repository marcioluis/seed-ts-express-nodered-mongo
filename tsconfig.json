{
	"include": [
		"src/**/*.ts",
		"types/**/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	],
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist/out-tsc",
		"target": "es2017",
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmitOnError": false,
		"noImplicitAny": false,
		"noStrictGenericChecks": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"declaration": false,
		"lib": [
			"es2017"
		],
		"typeRoots": [
			"./node_modules/@types"
		]
	}
}
